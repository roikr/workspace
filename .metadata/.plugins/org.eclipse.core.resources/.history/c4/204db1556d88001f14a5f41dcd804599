package {
	import flash.events.MouseEvent;
	import flash.display.Sprite;

	/**
	 * @author roikr
	 */
	public class ToolsMenu extends Toolbar {
		
		public static const TOOLBAR_MAGNIFIER:int = 0;
		public static const TOOLBAR_CURSOR:int = 1;
		public static const TOOLBAR_INK: int = 2;
		public static const TOOLBAR_MARKER:int = 3;
		public static const TOOLBAR_ERASER:int = 4;
		public static const TOOLBAR_HAND:int = 5;
		public static const TOOLBAR_DUPLICATE_LINE:int = 6;
		
		
		private var client:Object;
		
		public function ToolsMenu(client:Object) {
			this.client = client;
			addEventListener(MouseEvent.MOUSE_DOWN,onMouseDown);
		}
		
		private function onMouseDown(e:MouseEvent) : void {
			client.usingTool(e.localX / 50);
		}
	}
}
