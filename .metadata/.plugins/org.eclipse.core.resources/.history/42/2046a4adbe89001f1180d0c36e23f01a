package {
	import flash.display.Sprite;
	import flash.events.Event;
	import flash.events.MouseEvent;
	import flash.events.ProgressEvent;
	import flash.media.SoundMixer;
	import flash.media.SoundTransform;
	import flash.net.URLRequest;

	/**
	 * @author roikr
	 */
	public class TestingGameManager extends Sprite implements IGameManager{
		
		public var gameInterface : InterfaceAssets;
		public var game:IChatpetzGame;
		
		
		public function TestingGameManager() {
			addChild(gameInterface=new InterfaceAssets());
		}
		
		public function load(url:String) : void {
			//var url:String = "ChatpetzClouds.swf";
			var req:URLRequest = new URLRequest(url);
			gameInterface.uiLoader.scaleContent = false;
			gameInterface.uiLoader.addEventListener(ProgressEvent.PROGRESS, progressHandler);
			gameInterface.uiLoader.addEventListener(Event.COMPLETE, completeHandler);
			gameInterface.uiLoader.load(req);
			gameInterface.bStart.enabled = false;
			gameInterface.bClose.enabled = false;
			gameInterface.cbSound.selected = true;
		}
		
		public function unload() :void {
			gameInterface.uiLoader.unload();
			gameInterface.bStart.enabled = false;	
			gameInterface.bClose.enabled = false;	
		}

		private function progressHandler(e:ProgressEvent) : void {
			//trace("progressHandler: "+e.bytesLoaded+"/"+e.bytesTotal);
		}
		
		private function completeHandler(e:Event) : void {
			gameInterface.bStart.enabled = true;
			gameInterface.bStart.addEventListener(MouseEvent.MOUSE_DOWN,onStart);
			gameInterface.bClose.addEventListener(MouseEvent.MOUSE_DOWN,onClose);
			gameInterface.cbSound.addEventListener(Event.CHANGE, function() : void {SoundMixer.soundTransform = new SoundTransform(gameInterface.cbSound.selected ? 1 : 0);} );
			game = gameInterface.uiLoader.content as IChatpetzGame;
		}

		private function onStart(e:Event) : void {
			game.start(this);
			gameInterface.bStart.enabled = false;	
			gameInterface.bClose.enabled = true;		
		}
		
		public function onClose(e:Event) : void {
			game.exit();
			gameInterface.uiLoader.unload();
			game = null;
		}
		
		
		public function setScore(score:int) : void {
			
		}
		
		public function setLevel(level:int) : void {
			
		}
		
		public function playChatpetzCode(code : int,probability:Number=1.0) : void {
			ChatpetzCodes.play(code,probability)
		}
		
		public function chooseAndPlayChatpetzCode(arr:Array,probability:Number=1.0) : void {
			ChatpetzCodes.chooseAndPlay(arr,probability);	
		}
		
		
		
		
	}
}
